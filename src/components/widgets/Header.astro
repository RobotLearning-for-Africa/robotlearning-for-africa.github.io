---
import Logo from '~/components/Logo.astro';
/**
 * Ultra-minimal hero for Akili Robotics
 * Props (all optional except title):
 * - title: string
 * - subtitle: string
 * - tagline: string (small pill above the title)
 * - actions: Array<{ href: string; label: string; target?: string }>
 * - id: string
 */
const {
  title = 'Akili Robotics',
  subtitle = 'Community • Collaboration • Advancement across Africa',
  tagline = 'Robotics for Africa',
  actions = [
    { href: '#community', label: 'Join the community' },
    { href: '#about', label: 'Learn more' },
  ],
  id,
} = Astro.props;
---

<section class="relative not-prose" {...id ? { id } : {}} aria-label="Hero" id="home">
  <!-- Background: charcoal + subtle grid + turquoise glow -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Charcoal base -->
    <div class="absolute inset-0 bg-[var(--akili-charcoal)]"></div>

    <!-- Subtle grid (SVG) -->
    <!-- <svg class="absolute inset-0 w-full h-full opacity-[0.08]" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <defs>
        <pattern id="grid" width="32" height="32" patternUnits="userSpaceOnUse">
          <path d="M 32 0 L 0 0 0 32" fill="none" stroke="white" stroke-width="0.5"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)"></rect>
    </svg> -->

    <!-- Soft turquoise radial glow -->
    <div
      class="absolute -top-40 left-1/2 -translate-x-1/2 h-[50rem] w-[50rem] rounded-full blur-[120px] opacity-70"
      style="
        background: radial-gradient(closest-side, var(--akili-turquoise) 0%, transparent 60%);
      "
      aria-hidden="true"
    >
    </div>

    <!-- Bottom fade for clean edge -->
    <div class="absolute inset-x-0 bottom-0 h-40 bg-gradient-to-t from-[var(--akili-charcoal)] to-transparent"></div>
  </div>

  <!-- Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="py-24 md:py-36 text-center">
      {
        tagline && (
          <div
            class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-1.5 mb-6
                    text-[11px] tracking-[0.18em] uppercase font-semibold text-white/70 backdrop-blur-sm"
          >
            <span class="inline-block h-1.5 w-1.5 rounded-full bg-[var(--akili-turquoise)] shadow-[0_0_10px_var(--akili-turquoise)]" />
            {tagline}
          </div>
        )
      }

      <!-- Minimal wordmark styling: bold + subtle inline glow underline on “Akili” -->
      <div class="text-4xl md:text-5xl font-extrabold text-white leading-tight flex justify-center items-center gap-3">
        <span class="relative inline-block flex flex-row items-center">
          <Logo color="#e5e7eb" />
          <div class="text-muted font-light align-middle">Robotics</div>
        </span>
      </div>

      {subtitle && <p class="mx-auto mt-5 max-w-2xl text-lg md:text-xl text-white/70 [text-wrap:pretty]">{subtitle}</p>}

      {
        Array.isArray(actions) && actions.length > 0 && (
          <div class="mt-10 flex flex-col sm:flex-row gap-3 sm:justify-center">
            {actions.map((a) => (
              <a
                href={a.href}
                target={a.target || '_self'}
                class="group inline-flex items-center justify-center rounded-lg px-5 py-3 text-sm
                     shadow-[0_0_24px_rgba(83,242,232,0.35)]
                     hover:shadow-[0_0_36px_rgba(83,242,232,0.55)]
                     transition-shadow"
              >
                {a.label}
              </a>
            ))}
          </div>
        )
      }
    </div>

    <!-- Decorative tech line (ultra subtle) -->
    <div
      class="pointer-events-none absolute left-1/2 -translate-x-1/2 top-6 h-px w-[88%]
           bg-gradient-to-r from-transparent via-white/15 to-transparent"
      aria-hidden="true"
    >
    </div>
  </div>

  <style>
    :root {
      --akili-charcoal: #0d0f11;
      --akili-carbon: #1a1d20;
      --akili-graphite: #3b4046;
      /* soft turquoise glow */
      --akili-turquoise: rgb(122, 237, 245);
      --akili-blue: #00d6ff; /* optional accent */
    }
  </style>
</section>
