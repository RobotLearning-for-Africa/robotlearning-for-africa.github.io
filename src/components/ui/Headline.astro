---
import type { Headline as Props } from '~/types';
import { twMerge } from 'tailwind-merge';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  classes = {},
  alignment = 'center',
} = Astro.props;

let {
  container: containerClass = 'max-w-7xl',
  title: titleClass = 'text-4xl md:text-6xl ',
  subtitle: subtitleClass = 'text-lg',
} = classes;

if (alignment === 'left') {
  containerClass += ' text-left';
} else if (alignment === 'right') {
  containerClass += ' text-right';
} else {
  containerClass += ' text-center';
}
---

{
  (title || subtitle || tagline) && (
    <div class={twMerge('relative mx-auto px-4 sm:px-6 py-24', containerClass)}>
      {tagline && (
        <p class="text-sm tracking-[0.22em] uppercase text-[color:rgba(255,255,255,.6)]" set:html={tagline} />
      )}
      {title && <h1 class={twMerge('mt-3 font-bold tracking-tight', titleClass)} set:html={title} />}

      {subtitle && (
        <p
          class={twMerge('mt-4 text-[color:rgba(255,255,255,.75)] max-w-3xl mx-auto', subtitleClass)}
          set:html={subtitle}
        />
      )}
    </div>
  )
}
